
<section class="hero-header">
  <div class="grid">
    <div class="col-2-3">
       <h1>Seat Yo' Self</h1>
    </div>
    <div class="col-1-3">
       <%= image_tag("Drake 1.png") %>
    </div>
  </div>
</section>



<section class="restaurant-listing">
  <div class="content-wrap">

  <% @restaurants.each do |restaurant| %>
    <div class="restaurant-list">

      <p class="restaurant-image">
        <%= link_to image_tag(restaurant.image), restaurant_path(restaurant.id) %>
      </p>
      <p class="restaurant-name">
        <%= link_to restaurant.name, restaurant_path(restaurant.id) %><br/>
      </p>
      <p class="restaurant-category">
        <%= restaurant.category.name %>
      </p>

    </div>
  <% end %>
  </div>
</section>
